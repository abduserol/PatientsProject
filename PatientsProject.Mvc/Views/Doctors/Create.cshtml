@model DoctorRequest

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Doctor Create";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
        <p class="text-danger">
            @TempData["Message"]
        </p>
    }
    
    <form asp-action="Create" autocomplete="off">
        @Html.AntiForgeryToken()
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 

        @* --- BRANCH SEÇİMİ --- *@
        <div class="row mb-3">
            <label asp-for="BranchId" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId">
                    <option value="">-- Select Branch --</option>
                </select>
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>
        </div>

        @* --- USER SEÇİMİ (Dropdown) --- *@
        <div class="row mb-3">
            <label asp-for="UserId" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>

        @* --- GROUP SEÇİMİ (Dropdown) --- *@
        <div class="row mb-3">
            <label asp-for="GroupId" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <select asp-for="GroupId" class="form-select" asp-items="ViewBag.GroupId">
                    <option value="">-- Select Group --</option>
                </select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
        </div>

        <hr />  
        <div class="row mb-3">
            <div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">Save</button>
                &nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button>
                &nbsp;&nbsp;
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}