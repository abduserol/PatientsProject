@model PatientRequest

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Patient Edit";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
        <p class="text-danger">
            @TempData["Message"]
        </p>
    }
    
    <form asp-action="Edit" autocomplete="off">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* --- HEIGHT INPUT --- *@
        <div class="row mb-3">
            <label asp-for="Height" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
        </div>

        @* --- WEIGHT INPUT --- *@
        <div class="row mb-3">
            <label asp-for="Weight" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>

        @* --- DOCTORS MULTI-SELECT --- *@
        <div class="row mb-3">
            <label asp-for="DoctorIds" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                @* Controller tarafında selectedIds gönderildiği için, mevcut doktorlar seçili gelir *@
                <select asp-for="DoctorIds" class="form-select" asp-items="ViewBag.Doctors" multiple style="height: 150px;">
                </select>
                <span asp-validation-for="DoctorIds" class="text-danger"></span>
                <span class="text-muted small">
                    Hold <b>CTRL</b> to select/deselect multiple doctors.
                </span>
            </div>
        </div>

        @* GİZLİ ID ALANI *@
        <input type="hidden" asp-for="Id" />

        <hr />
        <div class="row mb-3">
            <div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">Save</button>
                &nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button>
                &nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                &nbsp;&nbsp;
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}