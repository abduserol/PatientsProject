@model UserResponse

@{
    var containerDivClass = "container";
    ViewData["Title"] = "User Delete";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <div class="@containerDivClass">
        @if (TempData["Message"] is not null)
        {
            <p class="text-danger">@TempData["Message"]</p>
        }
    
        <h3 class="text-danger">Are you sure you want to delete this user?</h3>
        <hr />

        @* --- USER NAME --- *@
        <div class="row mb-3">
            <div class="col-2 fw-bold">
                @Html.DisplayNameFor(model => model.UserName)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.UserName)
            </div>
        </div>

        @* --- FULL NAME --- *@
        <div class="row mb-3">
            <div class="col-2 fw-bold">Full Name</div>
            <div class="col-10">
                @Model.FirstName @Model.LastName
            </div>
        </div>

        @* --- GROUP --- *@
        <div class="row mb-3">
            <div class="col-2 fw-bold">
                @Html.DisplayNameFor(model => model.Group)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.Group)
            </div>
        </div>

        @* --- ROLES --- *@
        <div class="row mb-3">
            <div class="col-2 fw-bold">
                @Html.DisplayNameFor(model => model.Roles)
            </div>
            <div class="col-10">
                @Html.Raw(Model.Roles)
            </div>
        </div>

        <hr />
        <form asp-action="Delete">
            @Html.AntiForgeryToken()
        
            <input type="hidden" asp-for="Id" />
        
            <input type="submit" value="Yes" class="btn btn-danger" />&nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-outline-danger">No</a>
        </form>
    </div>
}