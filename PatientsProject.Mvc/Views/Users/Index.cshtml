@model IEnumerable<UserResponse>

@{
    var containerDivClass = "container";
    ViewData["Title"] = "User List";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <div class="@containerDivClass">
        @if (TempData["Message"] is not null)
        {
            <p class="text-success">@TempData["Message"]</p>
        }
        
        <div class="row mb-3">
            <div class="col-10 text-success">
                @Model.Count() record(s) found.
            </div>
            <div class="col-2 text-end">
                <a asp-action="Create">Create New User</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-secondary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>Full Name</th> @* FirstName + LastName *@
                    <th>@Html.DisplayNameFor(model => model.Group)</th>
                    <th>@Html.DisplayNameFor(model => model.Roles)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActiveF)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@Html.DisplayFor(modelItem => item.Group)</td>
                        <td>
                            @* Rolleri alt alta göstermek için Raw kullanıyoruz *@
                            @Html.Raw(item.Roles) 
                        </td>
                        <td>
                            @* Aktifse yeşil, pasifse kırmızı badge *@
                            @if(item.IsActive) {
                                <span class="badge bg-success">Active</span>
                            } else {
                                <span class="badge bg-danger">Passive</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}