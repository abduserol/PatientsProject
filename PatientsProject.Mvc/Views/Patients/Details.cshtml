@model PatientResponse

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Patient Details";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
        <p class="text-danger">@TempData["Message"]</p>
    }

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.UserName)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.UserName)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Group)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Group)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.HeightF)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.HeightF)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.WeightF)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.WeightF)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Doctors)
        </div>
        <div class="col-10">
            @Html.Raw(Model.Doctors)
        </div>
    </div>

    <hr />
    
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>
}